<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#EFEFEF">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvo1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="32dp"
        android:text="Our Team"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cla"
        app:layout_constraintTop_toBottomOf="@id/tvo1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/firstimage"
            app:cardCornerRadius="200dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/secondimage"
            app:layout_constraintLeft_toLeftOf="parent">
            <ImageView
                android:id="@+id/ib1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/hero5a"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/secondimage"
            app:cardCornerRadius="300dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/thirdimage"
            app:layout_constraintLeft_toRightOf="@id/firstimage">
            <ImageView
                android:id="@+id/ib2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/hero1"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/thirdimage"
            app:cardCornerRadius="300dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/secondimage"
            tools:ignore="MissingConstraints">
            <ImageView
                android:id="@+id/ib3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/hero6"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tm1"
            app:layout_constraintTop_toBottomOf="@id/firstimage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tm2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="Baymax"/>
        <TextView
            android:id="@+id/tm2"
            app:layout_constraintTop_toBottomOf="@id/secondimage"
            app:layout_constraintLeft_toRightOf="@id/tm1"
            app:layout_constraintRight_toLeftOf="@id/tm3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="Honey Lemon"/>
        <TextView
            android:id="@+id/tm3"
            app:layout_constraintTop_toBottomOf="@id/thirdimage"
            app:layout_constraintLeft_toRightOf="@id/tm2"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="Hiro"/>

        <TextView
            android:id="@+id/tm4"
            app:layout_constraintTop_toBottomOf="@id/tm1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tm5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Baymax"/>
        <TextView
            android:id="@+id/tm5"
            app:layout_constraintTop_toBottomOf="@id/tm2"
            app:layout_constraintLeft_toRightOf="@id/tm4"
            app:layout_constraintRight_toLeftOf="@id/tm6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="Honey Lemon"/>
        <TextView
            android:id="@+id/tm6"
            app:layout_constraintTop_toBottomOf="@id/tm3"
            app:layout_constraintLeft_toRightOf="@id/tm5"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="Hiro"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/fourimage"
            app:cardCornerRadius="200dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tm6"
            app:layout_constraintRight_toLeftOf="@id/fiveimage"
            app:layout_constraintLeft_toLeftOf="parent">
            <ImageView
                android:id="@+id/ib4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/hero3"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/fiveimage"
            app:cardCornerRadius="200dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tm5"
            app:layout_constraintLeft_toRightOf="@id/fourimage"
            app:layout_constraintRight_toLeftOf="@id/siximage">
            <ImageView
                android:id="@+id/ib5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/hero2"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/siximage"
            app:cardCornerRadius="200dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toRightOf="@id/fiveimage"
            app:layout_constraintTop_toBottomOf="@id/tm6"
            app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:id="@+id/ib6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/hero4"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tm7"
            app:layout_constraintTop_toBottomOf="@id/fourimage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tm8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:text="Fred"/>
        <TextView
            android:id="@+id/tm8"
            app:layout_constraintTop_toBottomOf="@id/fiveimage"
            app:layout_constraintLeft_toRightOf="@id/tm7"
            app:layout_constraintRight_toLeftOf="@id/tm9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:text="Go Go Lemon"/>
        <TextView
            android:id="@+id/tm9"
            app:layout_constraintTop_toBottomOf="@id/siximage"
            app:layout_constraintLeft_toRightOf="@id/tm8"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="Wasabi"/>

        <TextView
            android:id="@+id/tm10"
            app:layout_constraintTop_toBottomOf="@id/tm7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tm11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fred"/>
        <TextView
            android:id="@+id/tm11"
            app:layout_constraintTop_toBottomOf="@id/tm8"
            app:layout_constraintLeft_toRightOf="@id/tm1"
            app:layout_constraintRight_toLeftOf="@id/tm12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go Go Lemon"/>
        <TextView
            android:id="@+id/tm12"
            app:layout_constraintTop_toBottomOf="@id/tm9"
            app:layout_constraintLeft_toRightOf="@id/tm11"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wasabi"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tvm7"
        app:layout_constraintTop_toBottomOf="@+id/cla"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mission"
        android:textSize="28dp"
        android:textColor="#000001"/>
    <TextView
        android:id="@+id/tvm8"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvm7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Big Hero 6 is a 2014 American 3D computer animated superhero film produced by Walt Disney Animation Studios and released by Walt Disney Pictures. Loosely based on the superhero team of the same name by Marvel Comics, the film is the 54th Disney animated feature film.[5] Directed by Don Hall and Chris Williams, the film tells the story of Hiro Hamada, a young robotics prodigy who forms a superhero team to combat a masked villain. The film features the voices of Scott Adsit, Ryan Potter, Daniel Henney, T.J. Miller, Jamie Chung, Damon Wayans Jr., Genesis Rodriguez, Alan Tudyk, James Cromwell and Maya Rudolph."
        />



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>