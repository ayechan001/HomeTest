<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFC1BFBF">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.cardview.widget.CardView
    android:id="@+id/cv1"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@id/cv2">
    <ImageView
        android:id="@+id/i1"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/shoe"/>
    <ImageView
        android:layout_marginLeft="240dp"
        android:layout_marginTop="280dp"
        android:id="@+id/i2"
        android:src="@drawable/fav"
        android:layout_width="60dp"
        android:layout_height="30dp"/>
    <ImageView
        android:layout_marginLeft="300dp"
        android:layout_marginTop="280dp"
        android:id="@+id/i3"
        android:src="@drawable/save"
        android:layout_width="60dp"
        android:layout_height="30dp"/>

</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv2"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@id/cv1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18dp"
            android:textColor="#000001"
            android:text="Jog Air Mesh Summer Sneaker Shoes Sports Slop-on Max Size 46 Athletics"/>
            <TextView
                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="From Tianjin"
                android:textColor="#4F000000"
                app:layout_constraintTop_toBottomOf="@id/t1"
                app:layout_constraintBottom_toTopOf="@id/t3"/>
            <TextView
                android:id="@+id/t3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Minimun Order 5 Pcs"
                android:textColor="#4F000000"
                app:layout_constraintTop_toBottomOf="@id/t2"
                app:layout_constraintBottom_toTopOf="@id/t4"/>
            <TextView
                android:id="@+id/t4"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ks- 12,500 /Pcs       28 Scold"
                app:layout_constraintTop_toBottomOf="@id/t3"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/cv2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cv4"
        >
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Product Options"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Select"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="33dp"
            android:layout_marginLeft="320dp"
            android:src="@drawable/ar"
            android:layout_marginTop="8dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/cv3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <ImageView
            android:layout_marginTop="6dp"
            android:layout_width="37dp"
            android:layout_height="39dp"
            android:src="@drawable/ic_home"
            />
        <ImageView
            android:layout_marginTop="6dp"
            android:layout_width="37dp"
            android:layout_height="39dp"
            android:src="@drawable/message"
            android:layout_marginLeft="70dp"/>

        <Button
            android:layout_width="115dp"
            android:layout_height="34dp"
            android:layout_marginLeft="130dp"
            android:background="@drawable/layout"
            android:text="ADD TO CART"
            android:textColor="#ff0000"
            android:layout_marginTop="8dp"
            android:textSize="14dp" />

        <Button
            android:layout_width="115dp"
            android:layout_height="34dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="258dp"
            android:background="#FF5722"
            android:text="BUY NOW"
            android:textColor="#EFEAEA"
            android:textSize="14dp" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>