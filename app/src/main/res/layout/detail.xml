<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/orderno"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        android:textColor="#000000"
        android:text="Order Number : 1245783"
        android:textSize="18dp"/>
    <Button
        android:id="@+id/bt1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textSize="12dp"
        android:background="#324DE6"
        android:textColor="#EFEAEA"
        android:text="Special Request"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="406dp"
        android:layout_height="131dp"
        android:id="@+id/cvv3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cll">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvv1"
                android:layout_width="wrap_content"
                android:layout_height="41dp">

                <TextView
                    android:id="@+id/tt1"
                    android:layout_width="205dp"
                    android:layout_height="41dp"
                    android:layout_gravity="center"
                    android:paddingLeft="38dp"
                    android:paddingTop="8dp"
                    android:text="105,2000 Ks"
                    android:textSize="18dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvv2"
                android:layout_width="205.5dp"
                android:layout_height="99dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvv1">

                <Button
                    android:id="@+id/bt2"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="5dp"
                    android:background="#00ff00"
                    android:text="DELIVERED"
                    android:textSize="12dp"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/tt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="34dp"
                    android:text="Order date - 19/9/1990"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tt3"
                    android:layout_width="160dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="58dp"
                    android:text="Total Item : 4"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="131dp"
                android:layout_marginLeft="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toRightOf="@id/cvv2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tt4"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="8dp"
                    android:text="Delivery details"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/bt3"
                    android:layout_width="109dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:background="#FF5722"
                    android:text="grandma home"
                    android:textAllCaps="false"
                    android:textColor="#EFEAEA"
                    android:textSize="12dp"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/tt5"
                    android:layout_width="match_parent"
                    android:layout_height="79dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:text="Russia, S Petersburg
                                     196048 RU
                                    Milionnaya street 29,flat
                                    10"
                    android:textColor="#000000"
                    android:textSize="16dp" />

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvv4"
        app:layout_constraintTop_toBottomOf="@id/cvv3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvl1"
                android:layout_width="114dp"
                android:layout_height="30dp"
                android:layout_marginLeft="32dp"
                android:text="Delivery Charges"
                app:layout_constraintLeft_toLeftOf="parent" />
            <TextView
                android:id="@+id/tvl2"
                android:layout_width="114dp"
                android:layout_height="30dp"
                app:layout_constraintLeft_toRightOf="@id/tvl1"
                android:text=": 2500 KS"
                android:textColor="#FF5722"
                app:layout_constraintHorizontal_bias="0.679"
                app:layout_constraintRight_toRightOf="parent" />
            <TextView
                android:id="@+id/tvl3"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginLeft="32dp"
                android:text="Applied Coupon code"
                app:layout_constraintTop_toBottomOf="@id/tvl1"
                app:layout_constraintLeft_toLeftOf="parent" />
            <TextView
                android:id="@+id/tvl4"
                android:layout_width="114dp"
                android:layout_height="30dp"
                app:layout_constraintLeft_toRightOf="@id/tvl3"
                app:layout_constraintTop_toBottomOf="@id/tvl2"
                app:layout_constraintRight_toRightOf="parent"
                android:text=": FG-22365893"
                android:textColor="#FF5722"
                app:layout_constraintHorizontal_bias="0.5899"/>
            <TextView
                android:id="@+id/tvl5"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginLeft="32dp"
                android:text="Discount"
                app:layout_constraintTop_toBottomOf="@id/tvl3"
                app:layout_constraintLeft_toLeftOf="parent" />
            <TextView
                android:id="@+id/tvl6"
                android:layout_width="120dp"
                android:layout_height="30dp"
                app:layout_constraintLeft_toRightOf="@id/tvl5"
                app:layout_constraintTop_toBottomOf="@id/tvl4"
                app:layout_constraintRight_toRightOf="parent"
                android:text=": 20% (20410 KS)"
                android:textColor="#FF5722"
                app:layout_constraintHorizontal_bias="0.62"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvv5"
        app:layout_constraintTop_toBottomOf="@id/cvv4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/tvl7"
                android:layout_width="114dp"
                android:layout_height="30dp"
                android:layout_marginLeft="32dp"
                android:text="Payment Method"
                app:layout_constraintLeft_toLeftOf="parent" />
            <TextView
                android:id="@+id/tvl8"
                android:layout_width="120dp"
                android:layout_height="30dp"
                app:layout_constraintLeft_toRightOf="@id/tvl7"
                android:text=": BANK TRANSFER"
                android:textColor="#FF5722"
                app:layout_constraintHorizontal_bias="0.69"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvv6"
        app:layout_constraintTop_toBottomOf="@id/cvv5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvl9"
            android:layout_width="114dp"
            android:layout_height="30dp"
            android:layout_marginLeft="32dp"
            android:text="Iphone 8 Plus"
            android:textColor="#000000"
            app:layout_constraintLeft_toRightOf="@id/iphoneicon" />
        <TextView
            android:id="@+id/tvl10"
            android:layout_width="120dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toRightOf="@id/tvl9"
            android:text=": 980000 KS"
            android:textColor="#FF5722"
            app:layout_constraintHorizontal_bias="0.69"
            app:layout_constraintRight_toRightOf="parent" />
        <ImageView
            android:id="@+id/iphoneicon"
            android:src="@drawable/iphone"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvl11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                app:layout_constraintLeft_toRightOf="@id/iphoneicon"
                app:layout_constraintTop_toBottomOf="@+id/tvl9"
                android:text="Gold"
                />
            <TextView
                android:id="@+id/tvl12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="3dp"
                app:layout_constraintLeft_toRightOf="@id/iphoneicon"
                app:layout_constraintTop_toBottomOf="@+id/tvl11"
                android:text="QTY : 1"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvv7"
        app:layout_constraintTop_toBottomOf="@id/cvv6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvl13"
                android:layout_width="114dp"
                android:layout_height="30dp"
                android:layout_marginLeft="32dp"
                android:text="Blender N41015"
                android:textColor="#000000"
                app:layout_constraintLeft_toRightOf="@id/blender" />
            <TextView
                android:id="@+id/tvl14"
                android:layout_width="120dp"
                android:layout_height="30dp"
                app:layout_constraintLeft_toRightOf="@id/tvl13"
                android:text=": 999999 KS"
                android:textColor="#FF5722"
                app:layout_constraintHorizontal_bias="0.69"
                app:layout_constraintRight_toRightOf="parent" />
            <ImageView
                android:id="@+id/blender"
                android:src="@drawable/blender"
                android:scaleType="centerCrop"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvl15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                app:layout_constraintLeft_toRightOf="@id/blender"
                app:layout_constraintTop_toBottomOf="@+id/tvl13"
                android:text="Panasonic"
                />
            <TextView
                android:id="@+id/tvl16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="3dp"
                app:layout_constraintLeft_toRightOf="@id/blender"
                app:layout_constraintTop_toBottomOf="@+id/tvl15"
                android:text="QTY : 1"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvv8"
        app:layout_constraintTop_toBottomOf="@id/cvv7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:background="#FFC1BFBF"
        android:layout_height="130dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/a1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingTop="5dp"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@id/a2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Blank Information"/>
            <TextView
                android:id="@+id/a2"
                app:layout_constraintTop_toBottomOf="@id/a1"
                app:layout_constraintBottom_toTopOf="@id/a3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Bank Name"/>
            <TextView
                android:id="@+id/a3"
                app:layout_constraintTop_toBottomOf="@id/a2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/a4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="14dp"
                android:text="Account Number : "/>
            <TextView
                android:id="@+id/a4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/a3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="14dp"
                android:text="Name"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>