<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFC1BFBF">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cva1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvm1"
                android:layout_width="169dp"
                android:layout_height="31dp"
                android:layout_marginTop="8dp"
                android:text="Monero Wallets "
                android:textColor="#000000"
                android:textSize="22dp"
                android:layout_marginRight="35dp"
                app:layout_constraintRight_toLeftOf="@id/tvm2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvm2"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="Change"
                android:textSize="14dp"
                android:layout_marginLeft="35dp"
                app:layout_constraintRight_toLeftOf="@id/ivm1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tvm1"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivm1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tvm2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="55dp"
            android:layout_height="33dp"
            android:src="@drawable/dn"
            android:layout_marginTop="7dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cva2"
        android:layout_margin="13dp"
        app:layout_constraintTop_toBottomOf="@id/cva1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cvl3"
        android:layout_width="match_parent"
        android:layout_height="295dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvm3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Mucho Delares"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tvm4"
                app:layout_constraintTop_toBottomOf="@+id/tvm3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="XMR  Belence"
                android:textColor="#c13cff"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tvm5"
                app:layout_constraintTop_toBottomOf="@+id/tvm4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24.4565"
                android:textSize="64dp" />
            <TextView
                android:id="@+id/tvm6"
                app:layout_constraintTop_toBottomOf="@+id/tvm5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:paddingBottom="27dp"
                android:text="4800.24 USD"
                android:textSize="18dp" />

            <Button
                android:id="@+id/ba1"
                android:layout_width="174dp"
                android:layout_height="41dp"
                android:paddingBottom="11dp"
                android:text="SYNCING BLOCKCHAIN"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvm6" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="13dp"
            android:id="@+id/cvl3"
            app:layout_constraintTop_toBottomOf="@id/cva2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tt"
            android:layout_width="match_parent"
            android:layout_height="58dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="58dp">
            <ImageView
                android:id="@+id/iaa"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@drawable/send"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.03"/>
            <TextView
                android:id="@+id/tbb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                app:layout_constraintLeft_toRightOf="@+id/iaa"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                android:textColor="#000000"/>
            <View
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="5dp"
                android:background="#FFC1BFBF"
                android:layout_height="58dp"/>
            <ImageView
                android:id="@+id/iab"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:src="@drawable/ireceived"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.6"/>
            <TextView
                android:id="@+id/tba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Received"
                app:layout_constraintLeft_toRightOf="@+id/iab"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                android:textColor="#000000"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@id/cvl4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvl3"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvl4"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_margin="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tt"
        tools:layout_editor_absoluteX="185dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/aye"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/chan"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iaa1"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ireceived"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.03"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tbb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Received"
                    android:textColor="#000000"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintLeft_toRightOf="@+id/iaa1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tbb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="1.4545 XMR"
                    android:textColor="#000000"
                    app:layout_constraintHorizontal_bias="0.7"
                    app:layout_constraintLeft_toRightOf="@+id/tbb1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tbb3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="1.4545XMR"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintLeft_toRightOf="@+id/iaa1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tbb1" />

                <TextView
                    android:id="@+id/tbb4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="424 USD"
                    app:layout_constraintHorizontal_bias="0.7"
                    app:layout_constraintLeft_toRightOf="@+id/tbb3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tbb2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/ayechan"
                app:layout_constraintTop_toBottomOf="@id/aye">

                <ImageView
                    android:id="@+id/iayee1"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/send"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.03"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ty1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Sent"
                    android:textColor="#000000"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintLeft_toRightOf="@+id/iayee1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ty2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="1.4545 XMR"
                    android:textColor="#000000"
                    app:layout_constraintHorizontal_bias="0.7"
                    app:layout_constraintLeft_toRightOf="@+id/ty1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ty3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="1.4545XMR"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintLeft_toRightOf="@+id/iayee1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ty1" />

                <TextView
                    android:id="@+id/ty4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="424 USD"
                    app:layout_constraintHorizontal_bias="0.7"
                    app:layout_constraintLeft_toRightOf="@+id/ty3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ty2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ayechan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/aa"
                app:layout_constraintTop_toBottomOf="@id/chan">

                <ImageView
                    android:id="@+id/iaye1"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/send"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.03"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tye1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Sent"
                    android:textColor="#000000"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintLeft_toRightOf="@+id/iaye1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tye2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="1.4545 XMR"
                    android:textColor="#000000"
                    app:layout_constraintHorizontal_bias="0.7"
                    app:layout_constraintLeft_toRightOf="@+id/tye1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tye3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="1.4545XMR"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintLeft_toRightOf="@+id/iaye1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tye1" />

                <TextView
                    android:id="@+id/tye4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="424 USD"
                    app:layout_constraintHorizontal_bias="0.7"
                    app:layout_constraintLeft_toRightOf="@+id/tye3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tye2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/aa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ayechan">

                <ImageView
                    android:id="@+id/i1"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/send"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.03"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Sent"
                    android:textColor="#000000"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintLeft_toRightOf="@+id/i1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="1.4545 XMR"
                    android:textColor="#000000"
                    app:layout_constraintHorizontal_bias="0.7"
                    app:layout_constraintLeft_toRightOf="@+id/t1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="1.4545XMR"
                    app:layout_constraintHorizontal_bias="0.1"
                    app:layout_constraintLeft_toRightOf="@+id/i1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/t1" />

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="424 USD"
                    app:layout_constraintHorizontal_bias="0.7"
                    app:layout_constraintLeft_toRightOf="@+id/t3"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/t2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>